services:
  gateway:
    build:
      context: .
      dockerfile: gateway/Dockerfile
    container_name: leadpoet-gateway
    restart: unless-stopped
    ports:
      - "8000:8000"
    env_file:
      - .env
    environment:
      - BUILD_ID=dev-docker
      - GITHUB_SHA=local
    networks:
      - leadpoet-net
    depends_on:
      - minio
    # Run API server (background tasks start via lifespan in main.py)
    # --workers 1: Single worker to prevent duplicate background tasks
    # --access-log: Enable request logging for debugging
    # --log-level info: Show all logs
    command: python -m uvicorn gateway.main:app --host 0.0.0.0 --port 8000 --workers 1 --access-log --log-level info
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s

  minio:
    image: minio/minio:latest
    container_name: leadpoet-minio
    restart: unless-stopped
    ports:
      - "9000:9000"
      - "9001:9001"
    environment:
      MINIO_ROOT_USER: ${MINIO_ROOT_USER}
      MINIO_ROOT_PASSWORD: ${MINIO_ROOT_PASSWORD}
      # Critical: Configure MinIO to use public IP in presigned URLs
      # Without this, presigned URLs use internal Docker hostnames
      MINIO_DOMAIN: "${GATEWAY_PUBLIC_IP}"
      MINIO_SERVER_URL: "http://${GATEWAY_PUBLIC_IP}:9000"
    volumes:
      - minio-data:/data
    command: server /data --console-address ":9001" --address ":9000"
    networks:
      - leadpoet-net
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 5s
      retries: 3

networks:
  leadpoet-net:
    driver: bridge

volumes:
  minio-data:


