services:
  minio:
    image: minio/minio:latest
    container_name: leadpoet-minio
    restart: always
    ports:
      - "9000:9000"
      - "9001:9001"
    environment:
      MINIO_ROOT_USER: ${MINIO_ROOT_USER}
      MINIO_ROOT_PASSWORD: ${MINIO_ROOT_PASSWORD}
    volumes:
      - ~/minio-data:/data
    command: server /data --console-address ":9001"
    networks:
      - leadpoet-net

networks:
  leadpoet-net:
    driver: bridge


