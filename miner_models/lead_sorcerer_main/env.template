# Lead Sorcerer Environment Variables
# Copy this file to .env and fill in your actual values

# Google Programmable Search Engine
GSE_API_KEY=your_gse_api_key_here
GSE_CX=your_gse_cx_here

# OpenRouter for LLM access
OPENROUTER_KEY=your_openrouter_key_here

# Firecrawl for web crawling
FIRECRAWL_KEY=your_firecrawl_key_here

# Coresignal for company enrichment
CORESIGNAL_API_TOKEN=your_coresignal_token_here

# Apollo for lead generation and enrichment
APOLLO_API_KEY=your_apollo_api_key_here
APOLLO_REFRESH_TOKEN=your_apollo_refresh_token_here

# Mailgun for email validation
MAILGUN_SMTP_LOGIN=your_mailgun_login_here
MAILGUN_SMTP_PW=your_mailgun_password_here

# Snov.io for email enrichment
SNOV_IO_ID=your_snovio_id_here
SNOV_IO_SECRET=your_snovio_secret_here

# CompanyEnrich for company and contact enrichment
COMPANY_ENRICH_API_KEY=your_company_enrich_api_key_here

# Anymail Finder for email discovery
ANYMAIL_FINDER_API_KEY=your_anymail_finder_api_key_here

# Data directory (optional, defaults to ./data)
LEADPOET_DATA_DIR=./data
